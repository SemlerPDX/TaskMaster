<UserControl x:Class="TaskMaster.View.SettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SettingsTabViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight.Content}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid Background="Transparent" Margin="6">
        <Border CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Header Buttons Row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Checkboxes + Numeric Inputs Row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Spacer Fill Row -->
                    <RowDefinition Height="*"/>
                    <!-- ComboBox Selections Row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer Buttons Row -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Header Buttons-->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Margin="8,8,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}" HorizontalAlignment="Left"
                            Content="{DynamicResource Text.Button.CheckUpdates}"
                            Command="{Binding CheckUpdatesCommand}"/>
                    <Button Grid.Row="0" Grid.Column="2" Margin="8,8,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}" HorizontalAlignment="Right"
                            Content="{DynamicResource Text.Button.Save.Settings}"
                            Command="{Binding SaveSettingsCommand}"/>
                    <Button Grid.Row="0" Grid.Column="3" Margin="8,8,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}" HorizontalAlignment="Right"
                            Content="{DynamicResource Text.Button.Cancel.Changes}"
                            Command="{Binding CancelSettingsCommand}"/>
                    <Button Grid.Row="0" Grid.Column="4" Margin="8,8,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}" HorizontalAlignment="Right"
                            Content="{DynamicResource Text.Button.Restore.Settings}"
                            Command="{Binding RestoreSettingsCommand}"/>
                </Grid>

        
                <!--Settings Region-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <!--Checkboxes-->
                        <ColumnDefinition Width="Auto"/>
                        <!--Spacer-->
                        <ColumnDefinition Width="*"/>
                        <!--TextBoxes-->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Checkboxes-->
                    <StackPanel Grid.Column="0" Margin="8,0,0,0">
                        <CheckBox Content="{DynamicResource Text.CheckBox.UpdatesCheck}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.UpdatesCheck}"
                                  IsChecked="{Binding WorkingCopy.CheckForUpdates, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.WindowsStartup}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.WindowsStartup}"
                                  IsChecked="{Binding WorkingCopy.StartWithWindows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding NotPendingRestart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.RunAsAdmin}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.RunAsAdmin}"
                                  IsChecked="{Binding WorkingCopy.RunAsAdmin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding NotPendingRestart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.StartMinimized}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.StartMinimized}"
                                  IsChecked="{Binding WorkingCopy.StartMinimized, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.CloseMinimizes}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.CloseMinimizes}"
                                  IsChecked="{Binding WorkingCopy.MinimizeOnClose, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.TrayMinimize}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.TrayMinimize}"
                                  IsChecked="{Binding WorkingCopy.MinimizeToTray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.TrayNotifications}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.TrayNotifications}"
                                  IsChecked="{Binding WorkingCopy.ShowTrayNotifications, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding WorkingCopy.MinimizeToTray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.RecallWindowPos}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.RecallWindowPos}"
                                  IsChecked="{Binding WorkingCopy.RememberWindowPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox Content="{DynamicResource Text.CheckBox.AlwaysOnTop}"
                                  ToolTip="{DynamicResource ToolTip.CheckBox.AlwaysOnTop}"
                                  IsChecked="{Binding WorkingCopy.AlwaysOnTop, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!--Numeric Input TextBoxes-->
                    <Grid Grid.Column="2" Margin="22,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="{StaticResource Grid.InputSettings.Width.Spacer}"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="{StaticResource Grid.InputSettings.Width.Spacer}"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Relaunch Delay Seconds -->
                        <Label Grid.Column="0" Grid.Row="0" Margin="0,4,0,4"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Text.LauncherDelay}"/>
                        <TextBox Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right"
                                 Style="{StaticResource TextBox.Tiny.NumericInput}"
                                 Text="{Binding WorkingCopy.RelaunchDelaySeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericWithOneDecimal_PreviewTextInput"/>
                        <TextBlock Grid.Column="4" Grid.Row="0" HorizontalAlignment="Right"
                                   Style="{StaticResource TextBlock.SubTitle}"
                                   Text="{DynamicResource Text.Unit.Seconds}"/>

                        <!-- Max Re-launch Retries -->
                        <Label Grid.Column="0" Grid.Row="1" Margin="0,4,0,4"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Text.MaxRetry}"/>
                        <TextBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right"
                                 Style="{StaticResource TextBox.Tiny.NumericInput}"
                                 Text="{Binding WorkingCopy.MaxRelaunchRetries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="IntegerOnly_PreviewTextInput"/>
                        <TextBlock Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right"
                                   Style="{StaticResource TextBlock.SubTitle}"
                                   Text="{DynamicResource Text.Unit.Attempts}"/>

                        <!-- Process Killer Delay Seconds -->
                        <Label Grid.Column="0" Grid.Row="2" Margin="0,4,0,4"
                                Style="{StaticResource Label.Large}"
                                Content="{DynamicResource Text.KillerDelay}"/>
                        <TextBox Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right"
                                 Style="{StaticResource TextBox.Tiny.NumericInput}"
                                 Text="{Binding WorkingCopy.ProcessKillerDelaySeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericWithOneDecimal_PreviewTextInput"/>
                        <TextBlock Grid.Column="4" Grid.Row="2" HorizontalAlignment="Right"
                                   Style="{StaticResource TextBlock.SubTitle}"
                                   Text="{DynamicResource Text.Unit.Seconds}"/>

                        <!-- Max Re-kill Retries -->
                        <Label Grid.Column="0" Grid.Row="3" Margin="0,4,0,4"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Text.MaxRetry.Killer}"/>
                        <TextBox Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right"
                                 Style="{StaticResource TextBox.Tiny.NumericInput}"
                                 Text="{Binding WorkingCopy.MaxKillerRetries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="IntegerOnly_PreviewTextInput"/>
                        <TextBlock Grid.Column="4" Grid.Row="3" HorizontalAlignment="Right"
                                   Style="{StaticResource TextBlock.SubTitle}"
                                   Text="{DynamicResource Text.Unit.Attempts}"/>

                        <!-- Log History Max Entries -->
                        <Label Grid.Column="0" Grid.Row="4" Margin="0,4,0,4"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Text.MaxHistory}"/>
                        <TextBox Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right"
                                 Style="{StaticResource TextBox.Small.NumericInput}"
                                 Text="{Binding WorkingCopy.HistoryMaxEntries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="IntegerOnly_PreviewTextInput"/>
                        <TextBlock Grid.Column="4" Grid.Row="4" HorizontalAlignment="Right"
                                   Style="{StaticResource TextBlock.SubTitle}"
                                   Text="{DynamicResource Text.Unit.Entries}"/>
                    </Grid>
                </Grid>


                <!-- Comboboxes (Style, Theme, UI Scale, Culture)-->
                <Grid Grid.Row="2" Margin="8,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Comboboxes (Style, Theme)-->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="{StaticResource Grid.ComboBox.Width.Spacer}"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Style -->
                        <TextBlock Grid.Column="0" Grid.Row="1" Margin="8,8,0,8"
                                HorizontalAlignment="Left"
                                Text="{DynamicResource Text.ComboBox.Style}"/>
                        <ComboBox Grid.Column="2" Grid.Row="1" Margin="0,8,0,8"
                                  HorizontalAlignment="Left"
                                  Style="{StaticResource ComboBox.Base.Right}"
                                  ItemsSource="{Binding StyleOptions}"
                                  SelectedValuePath="Factor"
                                  SelectedValue="{Binding WorkingCopy.CornerRadiusFactor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Label}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Theme -->
                        <TextBlock Grid.Column="0" Grid.Row="2" Margin="8,8,0,8"
                                   HorizontalAlignment="Left"
                                   Text="{DynamicResource Text.ComboBox.Theme}"/>
                        <ComboBox Grid.Column="2"  Grid.Row="2" Margin="0,8,0,8"
                                  Width="Auto"
                                  HorizontalAlignment="Left"
                                  Style="{StaticResource ComboBox.Base.Right}"
                                  ItemsSource="{Binding ThemeOptions}"
                                  SelectedItem="{Binding WorkingCopy.Theme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
            
                    <!-- Combobox (UI Scale)-->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="{StaticResource Grid.ComboBox.Width.Spacer}"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- UI Scale -->
                        <TextBlock Grid.Column="3" Grid.Row="0" Margin="0,8,16,8"
                                   HorizontalAlignment="Right"
                                   Text="{DynamicResource Text.ComboBox.UiScale}"/>
                        <ComboBox Grid.Column="1" Grid.Row="0" Margin="0,8,0,8"
                                  Style="{StaticResource ComboBox.Base.Top}"
                                  ItemsSource="{Binding UiScaleOptions}"
                                  SelectedItem="{Binding WorkingCopy.UiScalePercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StringFormat={}{0}%}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- Combobox (Lang/Culture)-->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                
                        <!-- Languages -->
                        <ComboBox Grid.Column="1" Grid.Row="1" Margin="0,8,16,8"
                                  HorizontalAlignment="Right"
                                  Style="{StaticResource ComboBox.CultureDialog.Top}"
                                  ItemsSource="{Binding Languages}"
                                  SelectedValuePath="Culture"
                                  SelectedValue="{Binding WorkingCopy.UiCulture, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Grid>
        
        
                <!--Footer buttons-->
                <Grid Grid.Row="4" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="8,0,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}"
                            Content="{DynamicResource Text.Button.Uninstall}"
                            Command="{Binding UninstallCommand}"/>

                    <!-- Copyright Footer -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.CopyrightPrefix}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{Binding Path=., Source={x:Static sys:DateTime.Now}, StringFormat={}{0:yyyy}}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.Author.Avatar}"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" Margin="8,0,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide.Image.Text}"
                            Content="{StaticResource ImageSource.Seal}"
                            Tag="{DynamicResource Text.Button.Freeware}"
                            Command="{Binding OpenSupport}"/>
                    <Button Grid.Column="3" Margin="8,0,8,0" Width="Auto"
                            Style="{StaticResource Button.Wide}"
                            Content="{DynamicResource Text.Button.About}"
                            Command="{Binding OpenAboutCommand}"/>
                    <Button Grid.Column="4" Margin="8,0,8,0" Width="Auto"
                            Style="{StaticResource Button.Narrow}"
                            Content="{DynamicResource Text.Button.License}"
                            Command="{Binding ShowLicenseCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
