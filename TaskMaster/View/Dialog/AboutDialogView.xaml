<UserControl x:Class="TaskMaster.View.Dialog.AboutDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel.Dialog"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:AboutDialogViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             Visibility="{Binding AboutDialog.IsOpen, Converter={StaticResource BoolToVisibility}}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid>
        <!-- Scrim -->
        <Border Background="#80000000"
                BorderBrush="Transparent"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"/>

        <!-- Dialog card -->
        <Border Width="Auto"
                Padding="12"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                Color="{DynamicResource Color.Button.Shadow}" 
                                ShadowDepth="6" 
                                BlurRadius="5" 
                                Direction="240" 
                                Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>

            <Grid MinWidth="{StaticResource Size.ListBox.MaxWidth.License.Mini}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title Image -->
                <Image Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left"
                       Width="{StaticResource Size.Image.Width}" Style="{StaticResource Image.Large}"
                       Source="{StaticResource ImageSource.AppTile}"/>
                
                <StackPanel Grid.Row="0">
                    <!-- Title -->
                    <TextBlock HorizontalAlignment="Center"
                               Style="{StaticResource TextBlock.Title}"
                               Text="{DynamicResource Text.AboutDialog.Title}"/>
                    <!-- Sub-Title -->
                    <TextBlock Margin="32,4,0,2"
                               Style="{StaticResource TextBlock.Footer}"
                               Text="{DynamicResource Text.AboutDialog.Subtitle}"/>

                    <!-- Spacer -->
                    <Separator Margin="72,8,8,8"/>
                </StackPanel>


                <!-- About App Content -->
                <StackPanel Grid.Row="3" Margin="0,12,0,8" Orientation="Vertical" HorizontalAlignment="Center">
                    <!-- Version Line -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <Label Margin="0,0,4,0"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Content.AboutDialog.AppInfo.Version}"/>
                        <TextBlock Style="{StaticResource TextBlock.Body}"
                                   Text="{Binding AppVersion}"/>
                    </StackPanel>
                    
                    <!-- Author Line -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <Label Margin="0,0,4,0"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Content.AboutDialog.AppInfo.Author}"/>
                        <TextBlock Style="{StaticResource TextBlock.Body}">
                            <Run Text="{DynamicResource Text.App.Author}"/>
                            <Run Text="{DynamicResource Text.App.Author.Alias}"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Contact Line -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <Label Margin="0,0,4,0"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Content.AboutDialog.AppInfo.Contact}"/>
                        <TextBlock>
                            <Hyperlink Command="{Binding OpenUriCommand}"
                                       CommandParameter="{DynamicResource Uri.AboutDialog.AppInfo.Contact}"
                                       ToolTip="{DynamicResource ToolTip.AboutDialog.AppInfo.Contact}"
                                       AutomationProperties.Name="{DynamicResource Text.AboutDialog.AppInfo.Contact}">
                                <Run FontWeight="Regular" Text="{DynamicResource Text.AboutDialog.AppInfo.Contact}"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- License Line -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <Label Margin="0,0,4,0"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Content.AboutDialog.AppInfo.License}"/>
                        <TextBlock>
                            <Hyperlink Command="{Binding OpenUriCommand}"
                                       CommandParameter="{DynamicResource Uri.AboutDialog.AppInfo.License}"
                                       ToolTip="{DynamicResource ToolTip.AboutDialog.AppInfo.License}"
                                       AutomationProperties.Name="{DynamicResource Text.AboutDialog.AppInfo.License}">
                                <Run FontWeight="Regular" Text="{DynamicResource Text.AboutDialog.AppInfo.License}"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>


                <!-- Disclaimer ListBox -->
                <ListBox Grid.Row="4" Panel.ZIndex="999" xml:space="preserve" Padding="0,8"
                            Style="{StaticResource ListBox.License}"
                            Width="{StaticResource Size.ListBox.MaxWidth.License.Mini}"
                            Height="{StaticResource Size.ListBox.MaxHeight.License.Mini}"
                            ItemsSource="{Binding DisclaimerLines}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock xml:space="preserve" Text="{Binding}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <!-- Footer + Buttons -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Ok (close) Button -->
                    <Button Margin="0,8,0,0" HorizontalAlignment="Left"
                            IsDefault="True"
                            Style="{StaticResource Button.Dialog.Thin}"
                            Content="{DynamicResource Text.Button.OK}"
                            Command="{Binding CloseCommand}"/>
                    
                    <!-- Copyright Footer -->
                    <StackPanel Margin="64,0" Orientation="Horizontal">
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.CopyrightPrefix}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{Binding Path=., Source={x:Static sys:DateTime.Now}, StringFormat={}{0:yyyy}}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.Author.Avatar}"/>
                    </StackPanel>

                <!-- Show Full License Button -->
                    <Button Margin="0,8,0,0" HorizontalAlignment="Right"
                            Style="{StaticResource Button.Narrow}"
                            Content="{DynamicResource Text.Button.License}"
                            Command="{Binding ShowLicenseCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
