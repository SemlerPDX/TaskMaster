<UserControl x:Class="TaskMaster.View.Dialog.SupportDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel.Dialog"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SupportDialogViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             Visibility="{Binding SupportDialog.IsOpen, Converter={StaticResource BoolToVisibility}}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid>
        <!-- Scrim -->
        <Border Background="#80000000"
                BorderBrush="Transparent"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"/>

        <!-- Dialog card -->
        <Border Width="Auto"
                Padding="12"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                Color="{DynamicResource Color.Button.Shadow}" 
                                ShadowDepth="6" 
                                BlurRadius="5" 
                                Direction="240" 
                                Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>

            <Grid MinWidth="{StaticResource Window.BaseWidth.Dialog.Support}" Margin="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--  Titlebar Section  -->
                <Image Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left"
                       Width="{StaticResource Size.Image.Width}"
                       Style="{StaticResource Image.Large}"
                       Source="{StaticResource ImageSource.AppTile}"/>
                
                <Button Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        IsDefault="True"
                        Style="{StaticResource Button.Dialog.Thin}"
                        Content="{DynamicResource Text.Button.Close}"
                        Command="{Binding CloseCommand}"/>
                
                <StackPanel Grid.Row="0">
                    <!-- Title -->
                    <TextBlock Text="{DynamicResource Text.SupportDialog.Title}"
                               Style="{StaticResource TextBlock.Title}"
                               HorizontalAlignment="Center"/>
                    
                    <!-- Sub-Title -->
                    <TextBlock Margin="0,4,0,2"
                               Style="{StaticResource TextBlock.Footer}"
                               Text="{DynamicResource Text.SupportDialog.Subtitle}"/>

                    <!-- Spacer -->
                    <Separator Margin="72,8,8,8"/>
                </StackPanel>

                <!--  Other Freeware Header Section  -->
                <Image Grid.Row="3" Grid.RowSpan="2" Margin="0,6,32,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                       Width="{StaticResource Size.Image.Width}" 
                       Style="{StaticResource Image.Large}"
                       Source="{StaticResource ImageSource.Seal}"/>
                <TextBlock Grid.Row="3" Margin="0,12,64,0" HorizontalAlignment="Center"
                           Style="{StaticResource TextBlock.Header}"
                           Text="{DynamicResource Text.SupportDialog.Freeware.Header}"/>


                <!-- Freeware Content Section -->
                <Grid Grid.Row="4" Margin="32,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource Grid.Image.Width.Small}"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--  Freeware Link:  PowerToys  -->
                    <Image Grid.Row="0" Grid.RowSpan="2" Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Width="{StaticResource Size.Image.Width.Small}"
                           Style="{StaticResource Image.Large}"
                           Source="{StaticResource ImageSource.PowerToys}"/>
                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical">
                        <StackPanel Margin="16,16,0,0" Orientation="Horizontal">
                            <Label Margin="0,0,4,0"
                                   Style="{StaticResource Label.Large}"
                                   Content="{DynamicResource Content.SupportDialog.PowerToys}"/>
                            <TextBlock>
                                    <Hyperlink Command="{Binding OpenUriCommand}"
                                               CommandParameter="{DynamicResource Uri.SupportDialog.PowerToys}"
                                               ToolTip="{DynamicResource ToolTip.SupportDialog.PowerToys}"
                                               AutomationProperties.Name="{DynamicResource Text.SupportDialog.PowerToys}">
                                        <Run FontWeight="ExtraBold" Text="{DynamicResource Text.SupportDialog.PowerToys}"/>
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Margin="24,0,0,0" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock.Footer}"
                                   Text="{DynamicResource Text.SupportDialog.PowerToys.Description}"/>
                    </StackPanel>

                    <!--  Freeware Link:  Everything  -->
                    <Image Grid.Row="1" Grid.RowSpan="2" Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Width="{StaticResource Size.Image.Width.Small}"
                           Style="{StaticResource Image.Large}"
                           Source="{StaticResource ImageSource.Everything}"/>
                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
                        <StackPanel Margin="16,16,0,0" Orientation="Horizontal">
                            <Label Margin="0,0,4,0"
                                   Style="{StaticResource Label.Large}"
                                   Content="{DynamicResource Content.SupportDialog.Everything}"/>
                            <TextBlock>
                                    <Hyperlink Command="{Binding OpenUriCommand}"
                                               CommandParameter="{DynamicResource Uri.SupportDialog.Everything}"
                                               ToolTip="{DynamicResource ToolTip.SupportDialog.Everything}"
                                               AutomationProperties.Name="{DynamicResource Text.SupportDialog.Everything}">
                                        <Run FontWeight="ExtraBold" Text="{DynamicResource Text.SupportDialog.Everything}"/>
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Margin="24,0,0,0" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock.Footer}"
                                   Text="{DynamicResource Text.SupportDialog.Everything.Description}"/>
                    </StackPanel>

                    <!--  Freeware Link:  ServerMonitorSystem  -->
                    <Image Grid.Row="2" Grid.RowSpan="2" Margin="0,16,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Width="{StaticResource Size.Image.Width.Small}"
                           Style="{StaticResource Image.Large}"
                           Source="{StaticResource ImageSource.Sms}"/>
                    <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical">
                        <StackPanel Margin="16,16,0,0" Orientation="Horizontal">
                            <Label Margin="0,0,4,0"
                                   Style="{StaticResource Label.Large}"
                                   Content="{DynamicResource Content.SupportDialog.Sms}"/>
                            <TextBlock>
                                    <Hyperlink Command="{Binding OpenUriCommand}"
                                               CommandParameter="{DynamicResource Uri.SupportDialog.Sms}"
                                               ToolTip="{DynamicResource ToolTip.SupportDialog.Sms}"
                                               AutomationProperties.Name="{DynamicResource Text.SupportDialog.Sms}">
                                        <Run FontWeight="ExtraBold" Text="{DynamicResource Text.SupportDialog.Sms}"/>
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Margin="24,0,0,0" HorizontalAlignment="Left"
                                   Style="{StaticResource TextBlock.Footer}"
                                   Text="{DynamicResource Text.SupportDialog.Sms.Description}"/>
                    </StackPanel>
                </Grid>

                
                <!--  Spacer  -->
                <Separator Grid.Row="5" Margin="8,18"/>

                <!--  Author Support Section  -->
                <Image Grid.Row="5" Grid.RowSpan="2" Margin="8,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Width="{StaticResource Size.Image.Width}"
                       Style="{StaticResource Image.Large}"
                       Source="{StaticResource ImageSource.Author}"/>

                <!--  Author Support Header / Body  -->
                <StackPanel Grid.Row="6" Margin="12,0,0,8" HorizontalAlignment="Center"
                            MaxWidth="{StaticResource Size.StackPanel.Width.Support}">
                    <TextBlock Margin="0,8,0,0" HorizontalAlignment="Center"
                               Style="{StaticResource TextBlock.Header}"
                               Text="{DynamicResource Text.SupportDialog.LinkButtons.Header}"/>
                    <TextBlock Margin="0,4,0,0"
                               Style="{StaticResource TextBlock.Body}"
                               Text="{DynamicResource Text.SupportDialog.LinkButtons.Body}"/>
                    <TextBlock Margin="0,4,0,0" HorizontalAlignment="Center"
                               Style="{StaticResource TextBlock.Body}"
                               Text="{DynamicResource Text.SupportDialog.LinkButtons.ThankYou}"/>
                </StackPanel>


                <!--  Author Support Link Buttons  -->
                <StackPanel Grid.Column="1" Grid.Row="7" Margin="0,4,0,2"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <Button Margin="8"
                            Style="{DynamicResource Button.Wide.Image.Support}"
                            ToolTip="{DynamicResource ToolTip.SupportDialog.LinkButtons.Patreon}"
                            Command="{Binding OpenUriCommand}"
                            CommandParameter="{DynamicResource Uri.SupportDialog.LinkButtons.Patreon}"
                            Content="{StaticResource ImageSource.Patreon}">
                    </Button>
                    <Button Margin="8"
                            Style="{DynamicResource Button.Wide.Image.Support}"
                            ToolTip="{DynamicResource ToolTip.SupportDialog.LinkButtons.Coffee}"
                            Command="{Binding OpenUriCommand}"
                            CommandParameter="{DynamicResource Uri.SupportDialog.LinkButtons.Coffee}"
                            Content="{StaticResource ImageSource.Coffee}">
                    </Button>
                    <Button Margin="8"
                            Style="{DynamicResource Button.Wide.Image.Support}"
                            ToolTip="{DynamicResource ToolTip.SupportDialog.LinkButtons.PayPal}"
                            Command="{Binding OpenUriCommand}"
                            CommandParameter="{DynamicResource Uri.SupportDialog.LinkButtons.PayPal}"
                            Content="{StaticResource ImageSource.PayPal}">
                    </Button>
                </StackPanel>


                <!--  Copyright Footer  -->
                <Grid Grid.Column="1" Grid.Row="8" Grid.RowSpan="4" Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.CopyrightPrefix}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{Binding Path=., Source={x:Static sys:DateTime.Now}, StringFormat={}{0:yyyy}}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.Author.Avatar}"/>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>

