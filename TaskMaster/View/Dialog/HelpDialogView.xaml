<UserControl x:Class="TaskMaster.View.Dialog.HelpDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel.Dialog"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:HelpDialogViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             Visibility="{Binding HelpDialog.IsOpen, Converter={StaticResource BoolToVisibility}}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid>
        <!-- Scrim -->
        <Border Background="#80000000"
                BorderBrush="Transparent"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"/>

        <!-- Dialog card -->
        <Border Width="Auto"
                Padding="12"
                Margin="4"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                Color="{DynamicResource Color.Button.Shadow}" 
                                ShadowDepth="6" 
                                BlurRadius="5" 
                                Direction="240" 
                                Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>

            <Grid MinWidth="{StaticResource Window.BaseWidth.Dialog.Help}"
                  MaxHeight="{StaticResource Window.BaseHeight.Dialog.Help}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                    <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Image Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                       Width="{StaticResource Size.Image.Width}" Style="{StaticResource Image.Large}"
                       Source="{StaticResource ImageSource.Help}"/>
                <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,0,4">
                    <TextBlock Text="{DynamicResource Text.HelpDialog.Title}"
                               Style="{StaticResource TextBlock.Title}"
                               HorizontalAlignment="Center"/>
                    <Button Grid.Column="1" Grid.Row="0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource Button.Dialog.Thin}"
                            Content="{DynamicResource Text.Button.Close}"
                            IsDefault="True"
                            Width="Auto"
                            Command="{Binding CloseCommand}"/>
                </Grid>

                <!-- Spacer -->
                <Separator Grid.Column="1" Grid.Row="1" Margin="72,0,0,0"/>

                <!--  Help Content Body Section  -->
                <StackPanel Grid.Column="1" Grid.Row="3" Margin="10,0">
                    <!--  Restore Settings  -->
                    <StackPanel>
                        <TextBlock Style="{StaticResource TextBlock.Header}"
                                   Text="{DynamicResource Text.HelpDialog.Restore.Header}"/>
                        <TextBlock Margin="0,4,0,0"
                                   MaxWidth="{StaticResource Size.TextBlock.Width.Help}"
                                   Style="{StaticResource TextBlock.Body}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Text="{DynamicResource Text.HelpDialog.Restore.Body}"/>
                    </StackPanel>

                    <!--  Restore Application  -->
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Style="{StaticResource TextBlock.Header}"
                                   Text="{DynamicResource Text.HelpDialog.Uninstall.Header}"/>
                        <TextBlock Margin="0,4,0,0"
                                   MaxWidth="{StaticResource Size.TextBlock.Width.Help}"
                                   Style="{StaticResource TextBlock.Body}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Text="{DynamicResource Text.HelpDialog.Uninstall.Body}"/>
                    </StackPanel>

                    <!--  Permissions Notice  -->
                    <StackPanel Margin="0,18,0,0">
                        <TextBlock Style="{StaticResource TextBlock.Header}"
                                   Text="{DynamicResource Text.HelpDialog.Permissions.Header}"/>
                        <TextBlock Margin="0,4,0,8"
                                   MaxWidth="{StaticResource Size.TextBlock.Width.Help}"
                                   Style="{StaticResource TextBlock.Body}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Text="{DynamicResource Text.HelpDialog.Permissions.Body}"/>
                    </StackPanel>
                </StackPanel>

                <!--  Links Section  -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" HorizontalAlignment="Center">
                    <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center"
                               Style="{StaticResource TextBlock.Title}"
                               Text="{DynamicResource Text.HelpDialog.HelpLinks.Header}"/>

                    <!-- First Row - Wiki/Issues Links -->
                    <StackPanel Margin="0,4,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                        <!-- App Wiki Link -->
                        <StackPanel Margin="-5,0,12,0" Orientation="Horizontal">
                            <Label Margin="0,0,4,0"
                                   Style="{StaticResource Label.Large}"
                                   Content="{DynamicResource Content.HelpDialog.HelpLinks.Documentation}"/>
                            <TextBlock>
                                    <Hyperlink Command="{Binding OpenUriCommand}"
                                               CommandParameter="{DynamicResource Uri.HelpDialog.HelpLinks.Documentation}"
                                               ToolTip="{DynamicResource ToolTip.HelpDialog.HelpLinks.Documentation}"
                                               AutomationProperties.Name="{DynamicResource Text.HelpDialog.HelpLinks.Documentation}">
                                        <Run FontWeight="ExtraBold" Text="{DynamicResource Text.HelpDialog.HelpLinks.Documentation}"/>
                                    </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <!-- Bug Reports Link -->
                        <StackPanel Margin="12,0,0,0" Orientation="Horizontal">
                            <Label Margin="0,0,4,0"
                                   Style="{StaticResource Label.Large}"
                                   Content="{DynamicResource Content.HelpDialog.HelpLinks.BugReports}"/>
                            <TextBlock>
                                <Hyperlink Command="{Binding OpenUriCommand}"
                                           CommandParameter="{DynamicResource Uri.HelpDialog.HelpLinks.BugReports}"
                                           ToolTip="{DynamicResource ToolTip.HelpDialog.HelpLinks.BugReports}"
                                           AutomationProperties.Name="{DynamicResource Text.HelpDialog.HelpLinks.BugReports}">
                                    <Run FontWeight="ExtraBold" Text="{DynamicResource Text.HelpDialog.HelpLinks.BugReports}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Second Row - Discussion Board Link -->
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Label Margin="0,0,4,0"
                               Style="{StaticResource Label.Large}"
                               Content="{DynamicResource Content.HelpDialog.HelpLinks.Discussions}"/>
                        <TextBlock>
                            <Hyperlink Command="{Binding OpenUriCommand}"
                                       CommandParameter="{DynamicResource Uri.HelpDialog.HelpLinks.Discussions}"
                                       ToolTip="{DynamicResource ToolTip.HelpDialog.HelpLinks.Discussions}"
                                       AutomationProperties.Name="{DynamicResource Text.HelpDialog.HelpLinks.Discussions}">
                                <Run FontWeight="ExtraBold" Text="{DynamicResource Text.HelpDialog.HelpLinks.Discussions}"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <!-- Third Row - Copyright Footer -->
                    <StackPanel Margin="0,12,0,2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.CopyrightPrefix}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{Binding Path=., Source={x:Static sys:DateTime.Now}, StringFormat={}{0:yyyy}}"/>
                        <TextBlock Margin="2,0" Style="{StaticResource TextBlock.Footer}" Text="{DynamicResource Text.App.Author.Avatar}"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
