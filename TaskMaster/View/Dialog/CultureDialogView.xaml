<UserControl x:Class="TaskMaster.View.Dialog.CultureDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel.Dialog"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CultureDialogViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             Visibility="{Binding CultureDialog.IsOpen, Converter={StaticResource BoolToVisibility}}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <Grid>
        <!-- Scrim -->
        <Border Background="#80000000"
                BorderBrush="Transparent"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"/>

        <!-- Dialog card -->
        <Border Width="{StaticResource Window.BaseWidth.Dialog}"
                Padding="16"
                CornerRadius="12"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                Color="{DynamicResource Color.Button.Shadow}" 
                                ShadowDepth="6" 
                                BlurRadius="5" 
                                Direction="240" 
                                Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>
            
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title -->
                <Grid Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="{DynamicResource Text.CultureDialog.Title}"
                               Style="{StaticResource TextBlock.Title}"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Language picker -->
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                    </Grid.RowDefinitions>

                    <!-- Spacer -->
                    <Rectangle Grid.Column="1"  Grid.Row="0" Height="1" Fill="Transparent"/>

                    <!-- Language -->
                    <ComboBox Grid.Column="1" Grid.Row="1"
                              Style="{StaticResource ComboBox.Base}"
                              ItemsSource="{Binding Languages}"
                              SelectedValuePath="Culture"
                              SelectedItem="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="16"
                                           Style="{StaticResource Image.Culture.Flag}"
                                           Source="{Binding FlagPath}"
                                           SnapsToDevicePixels="True" UseLayoutRounding="True"/>
                                    <TextBlock Margin="8,0,0,0"
                                               Text="{Binding Display}"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource Brush.Text}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Spacer -->
                    <Rectangle Grid.Column="1"  Grid.Row="2" Height="1" Fill="Transparent"/>
                </Grid>

                <!-- OK button -->
                <Grid Grid.Column="1" Grid.Row="2" Margin="4,0,4,0"
                            HorizontalAlignment="Right">
                    <Button Grid.Row="2"
                            Style="{StaticResource Button.Dialog.Thin}"
                            Content="{DynamicResource Text.Button.OK}"
                            IsDefault="True"
                            Width="Auto"
                            Command="{Binding OkCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
