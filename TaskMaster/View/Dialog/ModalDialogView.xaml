<UserControl x:Class="TaskMaster.View.Dialog.ModalDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TaskMaster.ViewModel.Dialog"
             xmlns:cv="clr-namespace:TaskMaster.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ModalDialogViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="{StaticResource Window.BaseHeight}"
             d:DesignWidth="{StaticResource Window.BaseWidth}"
             Visibility="{Binding Dialog.IsOpen, Converter={StaticResource BoolToVisibility}}"
             KeyboardNavigation.TabNavigation="None"
             FocusManager.IsFocusScope="True"
             Focusable="False"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    
    <UserControl.Resources>
        <cv:DialogButtonsToVisibilityConverter x:Key="DialogButtonsToVisibility"/>
    </UserControl.Resources>
    
    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </UserControl.InputBindings>

    <Grid>
        <!-- Scrim -->
        <Border Background="#80000000"
                BorderBrush="Transparent"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"/>

        <!-- Dialog card -->
        <Border Width="{StaticResource Window.BaseWidth.Dialog}"
                Padding="16"
                CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                Background="{DynamicResource Brush.Panel.Background}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                Color="{DynamicResource Color.Button.Shadow}" 
                                ShadowDepth="6" 
                                BlurRadius="5" 
                                Direction="240" 
                                Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="{StaticResource Grid.DialogRow.Height.Spacer}"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Margin="4,0,4,0"
                           Style="{StaticResource TextBlock.Header}"
                           Text="{Binding Title}"/>

                <Separator Grid.Row="1" Margin="0,4,0,4"
                           Background="{DynamicResource Brush.Border}"/>

                <TextBlock Grid.Row="2"
                           Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Margin="4,0,4,0"
                           Foreground="{DynamicResource Brush.Text}"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="4" Margin="4,0,4,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    
                    <!-- Primary actions -->
                    <!-- Yes -->
                    <Button Margin="8,4,12,4" Width="Auto"
                            Style="{StaticResource Button.Dialog.Medium}"
                            Content="{DynamicResource Text.Button.Yes}"
                            IsDefault="True"
                            Visibility="{Binding Buttons, Converter={StaticResource DialogButtonsToVisibility}, ConverterParameter=Yes}"
                            Command="{Binding YesCommand}"/>

                    <!-- OK -->
                    <Button Margin="8,4,12,4" Width="Auto"
                            Style="{StaticResource Button.Dialog.Thin}"
                            Content="{DynamicResource Text.Button.OK}"
                            IsDefault="True"
                            Visibility="{Binding Buttons, Converter={StaticResource DialogButtonsToVisibility}, ConverterParameter=Ok}"
                            Command="{Binding OkCommand}"/>

                    
                    <!-- Secondary actions -->
                    <!-- No -->
                    <Button Margin="12,4,8,4" Width="Auto"
                            Style="{StaticResource Button.Dialog.Thin}"
                            Content="{DynamicResource Text.Button.No}"
                            Visibility="{Binding Buttons, Converter={StaticResource DialogButtonsToVisibility}, ConverterParameter=No}"
                            Command="{Binding NoCommand}"/>

                    <!-- Cancel -->
                    <Button Margin="12,4,8,4" Width="Auto"
                            Style="{StaticResource Button.Dialog.Large}"
                            Content="{DynamicResource Text.Button.Cancel}"
                            IsCancel="True"
                            Visibility="{Binding Buttons, Converter={StaticResource DialogButtonsToVisibility}, ConverterParameter=Cancel}"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
