<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Checkbox -->
    <Style TargetType="CheckBox">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Large}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
        <Setter Property="Margin" Value="4,4,0,4"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="1500"/>
        <Setter Property="ToolTipService.ShowDuration" Value="8000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid x:Name="Root" SnapsToDevicePixels="True" Opacity="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Box -->
                        <Border Width="18" Height="18" Margin="0,0,6,0"
                                CornerRadius="2"
                                BorderBrush="{DynamicResource Brush.CheckBox.Border}"
                                Background="{DynamicResource Brush.CheckBox.Background}"
                                BorderThickness="1"/>

                        <!-- Checkmark (only when checked) -->
                        <Path x:Name="Checkmark"
                              Grid.Column="0"
                              Margin="2"
                              Stretch="Uniform"
                              Stroke="{DynamicResource Brush.CheckBox.Checkmark}"
                              StrokeThickness="2.5"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              IsHitTestVisible="False"
                              Data="M 3 8 L 7 12 L 13 4"
                              Visibility="Collapsed"/>


                        <!-- Label/content -->
                        <ContentPresenter Grid.Column="1"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Checkmark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checked (by default) variant -->
    <Style x:Key="CheckBox.Checked" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>
</ResourceDictionary>