<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TextBox Input Fields -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.TextBox.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="Height" Value="{StaticResource Size.TextBox.Height}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size}"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="1500"/>
        <Setter Property="ToolTipService.ShowDuration" Value="15000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Focusable="False"
                                      Background="Transparent"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush.TextBox.Background.ReadOnly}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Readonly}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tiny variant -->
    <Style x:Key="TextBox.Tiny" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Tiny}"/>
    </Style>
    
    <!-- Small variant -->
    <Style x:Key="TextBox.Small" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Small}"/>
    </Style>
    
    <!-- Medium variant -->
    <Style x:Key="TextBox.Medium" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width}"/>
    </Style>
    
    <!-- Wide variant -->
    <Style x:Key="TextBox.Wide" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Wide}"/>
    </Style>
    
    <!-- Wide variant -->
    <Style x:Key="TextBox.Full" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Full}"/>
    </Style>

    
    <!-- Numeric Input Variants -->
    <!-- Tiny Numeric variant -->
    <Style x:Key="TextBox.Tiny.NumericInput" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Tiny}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.TextBox.Background.NumericInput}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.TextBox.Border.NumericInput}"/>
    </Style>
    
    <!-- Small Numeric variant -->
    <Style x:Key="TextBox.Small.NumericInput" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Width" Value="{StaticResource Size.TextBox.Width.Small}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.TextBox.Background.NumericInput}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.TextBox.Border.NumericInput}"/>
    </Style>
</ResourceDictionary>