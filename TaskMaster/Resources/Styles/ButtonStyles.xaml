<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Button -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Button.Text}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Button.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Button.Border}"/>
        <Setter Property="Height" Value="{StaticResource Size.Button.Height}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="1500"/>
        <Setter Property="ToolTipService.ShowDuration" Value="5000"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{DynamicResource Color.Button.Shadow}" 
                    ShadowDepth="2" 
                    BlurRadius="3" 
                    Direction="240" 
                    Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource CornerRadius.CurrentStyle}">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Pressed}"/>
                            <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect
                                    Color="{DynamicResource Color.Window.Background}" 
                                    ShadowDepth="1" 
                                    BlurRadius="3" 
                                    Direction="240" 
                                    Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
    
    <!-- Chrome Standard Buttons -->
    <Style x:Key="Button.Minimize" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Square}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Chrome}"/>
    </Style>
    
    <Style x:Key="Button.Close" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Square}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Chrome}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource CornerRadius.CurrentStyle}">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Hover.Chrome}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush.Button.Background.Pressed.Chrome}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1" 
                                        BlurRadius="3" 
                                        Direction="240" 
                                        Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Short button -->
    <Style x:Key="Button.Short" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Height" Value="{StaticResource Size.Button.Height.Short}"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Short Left Caret button -->
    <Style x:Key="Button.Short.Left" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Height" Value="{StaticResource Size.Button.Height.Short}"/>
        <Setter Property="Width" Value="Auto"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bt"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="6,0,6,0">
                            <!-- vector chevron (left) -->
                            <Path x:Name="Icon"
                                  Data="{StaticResource Icon.CaretLeft}"
                                  Stroke="{DynamicResource Brush.Text.Dim}"
                                  StrokeThickness="{DynamicResource Size.Path.StrokeThickness}"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  SnapsToDevicePixels="True"
                                  Margin="0,0,12,0"/>
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="{StaticResource Font.Size.Small}"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>

                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.92"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.85"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Pressed}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1" 
                                        BlurRadius="3" 
                                        Direction="240" 
                                        Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Round Help Image button -->
    <Style x:Key="Button.Square.ImageSource.Help" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="MinWidth" Value="{StaticResource Size.Button.Width.Square}"/>
        <Setter Property="MinHeight" Value="{StaticResource Size.Button.Height}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bt"
                            Width="{StaticResource Size.Icon.Width}"
                            Height="{StaticResource Size.Icon.Height}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   UseLayoutRounding="True"
                                   SnapsToDevicePixels="True"
                                   Style="{StaticResource Image.TitleBar.Help}"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.92"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.85"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Pressed}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1" 
                                        BlurRadius="3" 
                                        Direction="240" 
                                        Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Support Image buttons -->
    <Style x:Key="Button.Wide.Image.Support" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="MinHeight" Value="33"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bt"
                            Width="201"
                            Height="{TemplateBinding MinHeight}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="0"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image x:Name="Img" Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   UseLayoutRounding="True"
                                   SnapsToDevicePixels="True"
                                   Panel.ZIndex="999"
                                   Opacity="0.85"
                                   Style="{StaticResource Image.Buttons}"
                                   Source="{TemplateBinding Content}"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Img" Property="Opacity" Value="0.95"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1.25" 
                                        BlurRadius="2.5" 
                                        Direction="240" 
                                        Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Img" Property="Opacity" Value="1"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1" 
                                        BlurRadius="2" 
                                        Direction="240" 
                                        Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Image + Text buttons -->
    <Style x:Key="Button.Wide.Image.Text" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Wide}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bt"
                            Width="{TemplateBinding Width}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource CornerRadius.CurrentStyle}"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                            <Image Margin="4,4,6,4"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   UseLayoutRounding="True"
                                   SnapsToDevicePixels="True"
                                   Panel.ZIndex="999"
                                   Source="{TemplateBinding Content}"/>
                            <TextBlock Margin="0,0,8,0"
                                   Text="{TemplateBinding Tag}"
                                   FontSize="{StaticResource Font.Size}"
                                   UseLayoutRounding="True"
                                   SnapsToDevicePixels="True"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.92"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bt" Property="Opacity" Value="0.85"/>
                            <Setter TargetName="Bt" Property="Background" Value="{DynamicResource Brush.Button.Background.Pressed}"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="{DynamicResource Color.Button.Shadow}" 
                                        ShadowDepth="1" 
                                        BlurRadius="3" 
                                        Direction="240" 
                                        Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Narrow button -->
    <Style x:Key="Button.Narrow" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Narrow}"/>
    </Style>
    
    <!-- Square buttons -->
    <Style x:Key="Button.Square" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Square}"/>
    </Style>

    <Style x:Key="Button.Fat" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Fat}"/>
    </Style>

    <!-- Wide button -->
    <Style x:Key="Button.Wide" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="Width" Value="{StaticResource Size.Button.Width.Wide}"/>
    </Style>



    <!-- Dialog buttons -->
    <Style x:Key="Button.Dialog.Thin" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="MinWidth" Value="{StaticResource Size.Button.Width.Thin}"/>
    </Style>
    <Style x:Key="Button.Dialog.Medium" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="MinWidth" Value="{StaticResource Size.Button.Width.Medium}"/>
    </Style>
    <Style x:Key="Button.Dialog.Large" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
        <Setter Property="MinWidth" Value="{StaticResource Size.Button.Width.Large}"/>
    </Style>
</ResourceDictionary>