<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="Image">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="1500"/>
        <Setter Property="ToolTipService.ShowDuration" Value="5000"/>
    </Style>

    <!-- TitleBar App Icon Image -->
    <Style x:Key="Image.TitleBar.App" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="Source" Value="{StaticResource ImageSource.App}"/>
        <Setter Property="MinWidth" Value="{StaticResource Size.Icon.Width}"/>
        <Setter Property="MinHeight" Value="{StaticResource Size.Icon.Height}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{DynamicResource Color.Window.Background}" 
                    ShadowDepth="2.5" 
                    BlurRadius="2" 
                    Direction="240" 
                    Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Help Button Image -->
    <Style x:Key="Image.TitleBar.Help" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="Source" Value="{StaticResource ImageSource.Help}"/>
        <Setter Property="Width" Value="{StaticResource Size.Icon.Width}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{DynamicResource Color.Shadow}" 
                    ShadowDepth="2.5" 
                    BlurRadius="2" 
                    Direction="240" 
                    Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Large Images -->
    <Style x:Key="Image.Large" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="MaxHeight" Value="{StaticResource Size.Image.MaxHeight}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{DynamicResource Color.Shadow}" 
                    ShadowDepth="4" 
                    BlurRadius="3" 
                    Direction="240" 
                    Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tile Images -->
    <Style x:Key="Image.Tile" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="MaxHeight" Value="256"/>
    </Style>

    <!-- Button Images -->
    <Style x:Key="Image.Buttons" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="Width" Value="{StaticResource Size.Image.Button.Width}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{DynamicResource Color.Window.Background}" 
                    ShadowDepth="2.5" 
                    BlurRadius="2" 
                    Direction="240" 
                    Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Flag Images -->
    <Style x:Key="Image.Culture.Flag" TargetType="Image" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="MinHeight" Value="{StaticResource Size.Image.MinHeight.Flag}"/>
    </Style>
</ResourceDictionary>