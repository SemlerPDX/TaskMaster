<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Raw palette (Dark-theme) -->
    <!-- Window -->
    <Color x:Key="Color.Window.Background">#FF16181C</Color>
    <Color x:Key="Color.Window.Border">#FF232830</Color>
    <Color x:Key="Color.Panel.Background">#FF1F2329</Color>
    <Color x:Key="Color.Panel.Background.Alt">#FF232830</Color>
    <Color x:Key="Color.Accent">#FF4C8DF6</Color>
    <Color x:Key="Color.Accent.Dim">#FF3B6FC4</Color>
    <Color x:Key="Color.Border">#FF2F3640</Color>
    <Color x:Key="Color.Shadow">#FF16181C</Color>
    <Color x:Key="Color.Icon">#FF2F3640</Color>

    <!-- Separators -->
    <Color x:Key="Color.Separator">#101317</Color>

    <!-- Text -->
    <Color x:Key="Color.Text">#FFE6E6E6</Color>
    <Color x:Key="Color.Text.Dim">#FF656565</Color>
    <Color x:Key="Color.Text.Readonly">#FF909090</Color>
    <Color x:Key="Color.Text.Shadow">#FF000000</Color>

    <!-- ToolTips -->
    <Color x:Key="Color.ToolTip.Text">#FFE6E6E6</Color>
    <Color x:Key="Color.ToolTip.Border">#FF2F3640</Color>
    <Color x:Key="Color.ToolTip.Background">#FF313C4F</Color>

    <!-- TextBoxes -->
    <Color x:Key="Color.TextBox.Background">#FF111317</Color>
    <Color x:Key="Color.TextBox.Background.ReadOnly">#FF292F38</Color>
    <Color x:Key="Color.TextBox.Background.NumericInput">#FF111317</Color>
    <Color x:Key="Color.TextBox.Border.NumericInput">#FF666666</Color>

    <!-- ListBoxes -->
    <Color x:Key="Color.ListBox.Background">#FF111317</Color>
    <Color x:Key="Color.ListItem.Border.Hover">#853B6FC4</Color>
    <Color x:Key="Color.ListItem.Selected.Background">#904C8DF6</Color>
    <Color x:Key="Color.ListItem.Selected.Border">#FF232830</Color>
    <Color x:Key="Color.ListItem.Selected.Text">#FFEDEDED</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Background">#90436db1</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Border">#FF2F3640</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Text">#FF656565</Color>
    <!-- ListBoxes Custom Scrollbar -->
    <Color x:Key="Color.ScrollBar.Background">#00000000</Color> <!-- transparent by default -->
    <Color x:Key="Color.ScrollBar.Track">#FF22333A</Color> <!-- Gutter behind track -->
    <Color x:Key="Color.ScrollBar.Thumb">#FF445B66</Color>
    <Color x:Key="Color.ScrollBar.Thumb.Hover">#FF56727F</Color>
    <Color x:Key="Color.ScrollBar.Thumb.Pressed">#FF6A8796</Color>
    <Color x:Key="Color.ScrollBar.Button.Background">#00000000</Color> <!-- transparent by default -->
    <Color x:Key="Color.ScrollBar.Button.Background.Hover">#1AFFFFFF</Color>
    <Color x:Key="Color.ScrollBar.Button.Background.Pressed">#33FFFFFF</Color>
    <Color x:Key="Color.ScrollBar.Arrow">#FFBFD3DC</Color>
    <Color x:Key="Color.ScrollBar.Arrow.Pressed">#FFFFFFFF</Color>

    <!-- CheckBoxes -->
    <Color x:Key="Color.CheckBox.Background">#FF111317</Color>
    <Color x:Key="Color.CheckBox.Border">#FF666666</Color>
    <Color x:Key="Color.CheckBox.Checkmark">#FFA4A4A4</Color>
    
    <!-- Controls -->
    <Color x:Key="Color.Control.Border.Hover">#FF3B6FC4</Color>
    <Color x:Key="Color.Control.Border.Focus">#FF4C8DF6</Color>
    
    <!-- Popups -->
    <Color x:Key="Color.Popup.Background">#FF303644</Color>
    <Color x:Key="Color.Popup.Border">#FF4A546A</Color>
    
    <!-- Tabs -->
    <Color x:Key="Color.Tab.Text">#FFFFFFFF</Color>
    <Color x:Key="Color.Tab.Text.Dim">#B0B0B0</Color>
    <Color x:Key="Color.Tab.Idle">#444444</Color>
    <Color x:Key="Color.Tab.Hover">#555555</Color>
    <Color x:Key="Color.Tab.Selected">#656565</Color>
    <Color x:Key="Color.Tab.Border">#2A2A2A</Color>

    <!-- Buttons -->
    <Color x:Key="Color.Button.Text">#FFE7ECF2</Color>
    <Color x:Key="Color.Button.Background">#FF232830</Color>
    <Color x:Key="Color.Button.Background.Hover">#FF4C8DF6</Color>
    <Color x:Key="Color.Button.Background.Pressed">#FF3B6FC4</Color>
    <Color x:Key="Color.Button.Border">#FF2F3640</Color>
    <Color x:Key="Color.Button.Shadow">#FF16181C</Color>
    <Color x:Key="Color.Button.Background.Chrome">#FF303644</Color>
    <Color x:Key="Color.Button.Background.Hover.Chrome">#FFF70E0E</Color>
    <Color x:Key="Color.Button.Background.Pressed.Chrome">#FFD93737</Color>

    <!-- ComboBoxes -->
    <Color x:Key="Color.ComboBox.Text">#FFE7ECF2</Color>
    <Color x:Key="Color.ComboBox.Text.Selection">#FFE7ECF2</Color>
    <Color x:Key="Color.ComboBox.Background">#FF232830</Color>
    <Color x:Key="Color.ComboBox.Background.Hover">#FF3B6FC4</Color>
    <Color x:Key="Color.ComboBox.Background.Selection">#FF4C8DF6</Color>
    <Color x:Key="Color.ComboBox.Border">#FF2F3640</Color>
</ResourceDictionary>