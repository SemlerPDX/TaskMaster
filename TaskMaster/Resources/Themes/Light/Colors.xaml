<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Raw palette (Light-theme) -->
    <!-- Window -->
    <Color x:Key="Color.Window.Background">#FFB3B4B6</Color>
    <Color x:Key="Color.Window.Border">#FF8A95B1</Color>
    <Color x:Key="Color.Panel.Background">#FFE0E0E0</Color>
    <Color x:Key="Color.Panel.Background.Alt">#FF8A95B1</Color>
    <Color x:Key="Color.Accent">#FF4C8DF6</Color>
    <Color x:Key="Color.Accent.Dim">#FF3B6FC4</Color>
    <Color x:Key="Color.Border">#FFB2B2B2</Color>
    <Color x:Key="Color.Shadow">#FFBEBEBE</Color>
    <Color x:Key="Color.Icon">#FF2F3640</Color>

    <!-- Separators -->
    <Color x:Key="Color.Separator">#FF777777</Color>

    <!-- Text -->
    <Color x:Key="Color.Text">#FF000000</Color>
    <Color x:Key="Color.Text.Dim">#FF444444</Color>
    <Color x:Key="Color.Text.Readonly">#FF505050</Color>
    <Color x:Key="Color.Text.Shadow">#FFBEBEBE</Color>

    <!-- ToolTips -->
    <Color x:Key="Color.ToolTip.Text">#FF262626</Color>
    <Color x:Key="Color.ToolTip.Border">#FFB2B2B2</Color>
    <Color x:Key="Color.ToolTip.Background">#FFB9CDE9</Color>

    <!-- TextBoxes -->
    <Color x:Key="Color.TextBox.Background">#FFF5F7F8</Color>
    <Color x:Key="Color.TextBox.Background.ReadOnly">#FFCCD0D3</Color>
    <Color x:Key="Color.TextBox.Background.NumericInput">#FFA8B7CB</Color>
    <Color x:Key="Color.TextBox.Border.NumericInput">#FF232830</Color>

    <!-- ListBoxes -->
    <Color x:Key="Color.ListBox.Background">#FFCACACA</Color>
    <Color x:Key="Color.ListItem.Border.Hover">#703B6FC4</Color>
    <Color x:Key="Color.ListItem.Selected.Background">#804C8DF6</Color>
    <Color x:Key="Color.ListItem.Selected.Border">#FF232830</Color>
    <Color x:Key="Color.ListItem.Selected.Text">#FF1B1B1B</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Background">#8095AFD9</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Border">#FF2F3640</Color>
    <Color x:Key="Color.ListItem.SelectedInactive.Text">#FF262626</Color>
    <!-- ListBoxes Custom Scrollbar -->
    <Color x:Key="Color.ScrollBar.Background">#00000000</Color> <!-- transparent by default -->
    <Color x:Key="Color.ScrollBar.Track">#FFA8B2CC</Color> <!-- Gutter behind track -->
    <Color x:Key="Color.ScrollBar.Thumb">#FF3F4550</Color>
    <Color x:Key="Color.ScrollBar.Thumb.Hover">#905583F8</Color>
    <Color x:Key="Color.ScrollBar.Thumb.Pressed">#907AA4E7</Color>
    <Color x:Key="Color.ScrollBar.Button.Background">#00000000</Color> <!-- transparent by default -->
    <Color x:Key="Color.ScrollBar.Button.Background.Hover">#1AFFFFFF</Color>
    <Color x:Key="Color.ScrollBar.Button.Background.Pressed">#33FFFFFF</Color>
    <Color x:Key="Color.ScrollBar.Arrow">#FF000000</Color>
    <Color x:Key="Color.ScrollBar.Arrow.Pressed">#FF444444</Color>

    <!-- CheckBoxes -->
    <Color x:Key="Color.CheckBox.Background">#FFA8B7CB</Color>
    <Color x:Key="Color.CheckBox.Border">#FF232830</Color>
    <Color x:Key="Color.CheckBox.Checkmark">#FF444444</Color>

    <!-- Controls -->
    <Color x:Key="Color.Control.Border.Hover">#FF3B6FC4</Color>
    <Color x:Key="Color.Control.Border.Focus">#FF4C8DF6</Color>

    <!-- Popups -->
    <Color x:Key="Color.Popup.Background">#FFBFCBD2</Color>
    <Color x:Key="Color.Popup.Border">#FF2F3640</Color>

    <!-- Tabs -->
    <Color x:Key="Color.Tab.Text">#FF000000</Color>
    <Color x:Key="Color.Tab.Text.Dim">#FF262626</Color>
    <Color x:Key="Color.Tab.Selected">#FFFAFAFA</Color>
    <Color x:Key="Color.Tab.Hover">#FFFFFFFF</Color>
    <Color x:Key="Color.Tab.Idle">#FFDFDFDF</Color>
    <Color x:Key="Color.Tab.Border">#FF969696</Color>

    <!-- Buttons -->
    <Color x:Key="Color.Button.Text">#FF000000</Color>
    <Color x:Key="Color.Button.Background">#FFC6C9CB</Color>
    <Color x:Key="Color.Button.Background.Hover">#FF7AA4E7</Color>
    <Color x:Key="Color.Button.Background.Pressed">#905583F8</Color>
    <Color x:Key="Color.Button.Border">#FF2F3640</Color>
    <Color x:Key="Color.Button.Shadow">#FF262626</Color>
    <Color x:Key="Color.Button.Background.Chrome">#FF949697</Color>
    <Color x:Key="Color.Button.Background.Hover.Chrome">#FFF70E0E</Color>
    <Color x:Key="Color.Button.Background.Pressed.Chrome">#FFD93737</Color>

    <!-- ComboBoxes -->
    <Color x:Key="Color.ComboBox.Text">#FF000000</Color>
    <Color x:Key="Color.ComboBox.Text.Selection">#FFE7ECF2</Color>
    <Color x:Key="Color.ComboBox.Background">#FFE2E2E2</Color>
    <Color x:Key="Color.ComboBox.Background.Hover">#FF3B6FC4</Color>
    <Color x:Key="Color.ComboBox.Background.Selection">#904C8DF6</Color>
    <Color x:Key="Color.ComboBox.Border">#FF2F3640</Color>
</ResourceDictionary>